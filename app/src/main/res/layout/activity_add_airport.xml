<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAirport">

    <EditText
        android:id="@+id/airportICAO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="@string/airport_icao"
        android:autofillHints="@string/airport_icao"
        android:inputType="textPersonName"
        android:maxLength="4"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/addAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="+ Add Airport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/airportICAO"
        app:layout_constraintStart_toStartOf="@+id/airportICAO"
        app:layout_constraintTop_toBottomOf="@+id/airportICAO"
        app:layout_constraintVertical_bias="0.048" />
</android.support.constraint.ConstraintLayout>